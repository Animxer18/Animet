<div class="my-8" data-aos="fade-up">
    <div class="flex justify-start items-center m-4">
        <h2 class="text-neutral-100 text-xl uppercase">Recent Episodes</h2>
    </div>
    <div class="flex flex-wrap justify-center items-center gap-2">
        <% data.slice(0, 16).forEach(i=> { %>
            <a href="/<%= i.animeId %>/<%= i.episodeId %>" class="flex flex-col gap-1">
                <img src="<%= i.animeImg %>" alt="<%= i.animeTitle %>" title="<%= i.animeTitle %>"
                    class="w-40 h-56 rounded-tr-3xl object-cover">
                <span class="absolute text-neutral-100 bg-purple-600 px-2 rounded-r-3xl">
                    Episode <%= i.episodeNum %>
                </span>
                <p class="text-neutral-100 w-40 text-center truncate">
                    <%= i.animeTitle %>
                </p>
            </a>
            <% }); %>
    </div>
</div>